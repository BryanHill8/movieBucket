        <div id="updatebox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Update username and email or delete your account!</div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="update-alert" class="alert alert-danger col-sm-12"></div>
                            
                        <form action="/update" method="post" id="updateform" class="form-horizontal" role="form">
                            
                    
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="login-email" type="text" class="form-control" name="email" value="" placeholder="email">                                        
                                    </div>    
                                    
                            <div style="margin-bottom: 25px" class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username">                                        
                                    </div>
                                
                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->

                                    <div class="col-sm-12 controls">
                                      <input type="submit" value="Update" class="btn btn-success"></input>
                                    </div>
                                </div>
                        </form>    
                  </div>                     
        </div>  
         <form action="/delete" method="delete" id="deleteuser" class="form-horizontal" role="form">
        <input type="submit" value="Delete Account" class="btn btn-danger"></input>
     </form> 
</div>
    